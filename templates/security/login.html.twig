{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="container row d-flex justify-content-center mx-auto mt-3">
        
        <div class="col-md-7 col-11 row">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Tu es déjà connectée, {{ app.user.name | capitalize }} ! <a href="{{ path('app_logout') }}">Te déconnecter ?</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center text-md-start">Me connecter</h1>
                <label for="username" class="mt-3">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <label for="password" class="mt-3">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <div class="d-flex justify-content-center justify-content-md-start">
                    <button class="btn btn-lg btn-primary rounded mt-3" type="submit">
                        Me connecter
                    </button>
                </div>
                <p class="mt-5"><a href="{{ path('app_forgotten_password') }}">Mot de passe oublié</a></p>
            </form>
        </div>
    </section>
{% endblock %}
