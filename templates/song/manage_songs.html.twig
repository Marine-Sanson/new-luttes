{% extends 'base.html.twig' %}

{% block title %}Gérer les chants{% endblock %}

{% block body %}

    <section class="container row justify-content-center mt-3 mx-auto">
        
        <div class="col-9 row">
            <h1 class="text-center fw-bolder">Gestion des chants</h1>
            <p class="text-center">Permet d'ajouter un nouveau chant ou de télécharger des fichiers en lien avec un chant existant</p>
        </div>
        <div class="col-11 mt-5">

            <section id="addNewSong">

                <h2 class="text-center">Ajouter un nouveau chant</h2>

                    <div class="d-flex mt-3">
                        <a href="{{ path('app_new_song') }}" class="text-decoration-none mx-auto">
                            <button type="button" class="btn btn-sm btn-primary rounded mx-auto">Pour ajouter un nouveau chant, clique ici</button>
                        </a>
                    </div>

            </section>

            <section id="chooseASong" class="mt-5">
                <h2 class="text-center">Choisir un chant existant</h2>

                {% if outOfCatSongs %}
                    <h3 class="text-center mt-5">Hors catégorie :</h3>

                    <ul class="mt-3">
                        {% for song in outOfCatSongs %}

                            <li class="d-flex flex-column flex-lg-row justify-content-center row-lg mt-3 p-3 border-colored rounded">

                                <h3 class="col-lg row text-center mt-3 mx-auto m-lg-auto">{{ song.title }}</h3>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une voix</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter un texte</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une vidéo</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_update_song', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Modifier</button>
                                    </a>
                                </div>

                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}

                <h3 class="text-center mt-5">Chants année en cours :</h3>

                {% if currentYearSongs %}
                    <ul class="mt-3">
                        {% for song in currentYearSongs %}
                            <li class="d-flex flex-column flex-lg-row row-lg mt-3 p-3 border-colored rounded">

                                <h3 class="col-lg row text-center mt-3 mx-auto my-lg-auto">{{ song.title }}</h3>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une voix</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter un texte</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une vidéo</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_update_song', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Modifier</button>
                                    </a>
                                </div>

                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}


                <h3 class="text-center mt-5">Chants de manif / Chants partagés :</h3>

                {% if sharedSongs %}
                    <ul class="mt-3">
                        {% for song in sharedSongs %}
                            <li class="d-flex flex-column flex-lg-row justify-content-center row-lg mt-3 p-3 border-colored rounded">

                                <h3 class="col-lg row text-center mt-3 mx-auto m-lg-auto">{{ song.title }}</h3>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une voix</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter un texte</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une vidéo</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_update_song', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Modifier</button>
                                    </a>
                                </div>

                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}


                <h3 class="text-center mt-5">Chants années précédentes :</h3>

                {% if oldSongs %}
                    <ul class="mt-3 mx-auto">
                        {% for song in oldSongs %}
                            <li class="d-flex flex-column flex-lg-row justify-content-center row-lg mt-3 p-3 border-colored rounded">

                                <h3 class="col-lg row text-center mt-3 mx-auto m-lg-auto">{{ song.title }}</h3>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une voix</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter un texte</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une vidéo</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_update_song', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Modifier</button>
                                    </a>
                                </div>

                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}

                <h3 class="text-center mt-5">Livrets :</h3>

                {% if livrets %}
                    <ul class="mt-3">
                        {% for song in livrets %}
                            <li class="d-flex flex-column flex-lg-row justify-content-center row-lg mt-3 p-3 border-colored rounded">

                                <h3 class="col-lg row text-center mt-3 mx-auto m-lg-auto">{{ song.title }}</h3>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une voix</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter un texte</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Ajouter une vidéo</button>
                                    </a>
                                </div>

                                <div class="col-lg row mt-3 mx-auto m-lg-auto">
                                    <a href="{{ path('app_update_song', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">Modifier</button>
                                    </a>
                                </div>

                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun livret pour le moment</p>
                {% endif %}

            </section>
        </div>

    </section>

{% endblock %}
