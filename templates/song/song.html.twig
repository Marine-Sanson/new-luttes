{% extends 'base.html.twig' %}

{% block title %}Liste des chants{% endblock %}

{% block body %}

    <section class="container row justify-content-center mt-3 mx-auto">
        
        <div class="col-11 col-lg-9 row">
            <h1 class="text-center fw-bolder">Liste des chants</h1>
            <p class="text-center">Pour voir le détail d'un chant (paroles, voix) cliquer dessus</p>
        </div>
        <div class="col-11 mt-5">

            <section class="mt-5">

                {% if outOfCatSongs %}
                    <h3 class="text-center mt-5">Hors catégorie :</h3>

                    <ul class="mt-2 d-flex flex-column flex-lg-row">
                        {% for song in outOfCatSongs %}

                            <li>
                                <div class="col-lg row mt-2 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">{{ song.title }}</button>
                                    </a>
                                </div>
                            </li>

                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}

                <h3 class="text-center mt-5">Chants année en cours :</h3>

                {% if currentYearSongs %}
                    <ul class="mt-2 d-flex flex-column flex-lg-row">
                        {% for song in currentYearSongs %}

                            <li>
                                <div class="col-lg row mt-2 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">{{ song.title }}</button>
                                    </a>
                                </div>
                            </li>

                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}


                <h3 class="text-center mt-5">Chants de manif / Chants partagés :</h3>

                {% if sharedSongs %}
                    <ul class="mt-2 d-flex flex-column flex-lg-row">
                        {% for song in sharedSongs %}
                            <li>
                                <div class="col-lg row mt-2 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">{{ song.title }}</button>
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}


                <h3 class="text-center mt-5">Chants années précédentes :</h3>

                {% if oldSongs %}
                    <ul class="mt-2 d-flex flex-column flex-lg-row">
                        {% for song in oldSongs %}
                            <li>
                                <div class="col-lg row mt-2 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">{{ song.title }}</button>
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun chant dans cette catégorie</p>
                {% endif %}

                <h3 class="text-center mt-5">Livrets :</h3>

                {% if livrets %}
                    <ul class="mt-2 d-flex flex-column flex-lg-row">
                        {% for song in livrets %}
                            <li>
                                <div class="col-lg row mt-2 mx-auto m-lg-auto">
                                    <a href="{{ path('app_song_details', { id: song.id }) }}" class="text-center text-decoration-none m-auto">
                                        <button type="button" class="btn btn-sm btn-primary rounded">{{ song.title }}</button>
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">Aucun livret pour le moment</p>
                {% endif %}

            </section>
        </div>

    </section>

{% endblock %}
